@model ProjectCard

<div class="text-left">
    <h1 class="display-4">@Model.Project.Name</h1>
    
    <table> 
        <thead>
        </thead>
        <tbody>
            <tr> 
                <td scope="">@Model.Project.Id . @Model.Project.Name</td>
                <td scope="">@Model.Project.DateStart - @Model.Project.DateEnd</td>
                <td scope="">@Model.Project.Assignments.Count()</td>
                <td scope="">                    
                    <a class="" asp-area="" asp-controller="Projects" asp-action="Remove" asp-route-id="@Model.Project.Id">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
     
        


</div>
<a class="btn btn-primary" asp-area="" asp-controller="Projects" asp-action="AddTask" asp-route-id="@Model.Project.Id"> 
    <i class="bi bi-plus-square">Task</i> 
</a>
<a class="btn btn-primary" asp-area="" asp-controller="Projects" asp-action="Edit" asp-route-id="@Model.Project.Id">
    <i class="bi bi-pen"></i>
</a>
<a class="btn btn-primary" asp-area="" asp-controller="Projects" asp-action="Remove" asp-route-id="@Model.Project.Id">
    <i class="bi bi-trash"></i>
</a>

