@model Assignment 

<h1>#@Model.Id:@Model.Name</h1>

<div class="row mb-3 ml-0 mr-0" style="">
    <div class="card border-dark mb-3" style="">
        <h4 class="card-header">
            Details:        
        </h4>
        <div class="card-body text-dark">
            <p class="card-text">#@Model.IdProject Project</p>
            <form method="post" class="text-left">
                <div class="ml-0">
                    <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-floating col-12">
                        <input asp-for="Name" class="form-control border-dark shadow" />
                        <label asp-for="Name" class=""></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>  
                    <div class="form-floating col-12">
                        <input asp-for="AssignmentStatus" class="form-control border-dark shadow" />
                        <label asp-for="AssignmentStatus" class="" type="hidden"></label>
                        <span asp-validation-for="AssignmentStatus" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-12">
                        <input asp-for="Description"  class="form-control border-dark shadow" />
                        <label asp-for="Description" class="" type="hidden"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                </div>

                <div class="row mb-3 ml-0">
                    <button class="btn btn-dark border-dark backgroud-dark mr-1" type="submit">
                        <i class="bi bi-floppy"></i>
                    </button>
                    <a class="btn btn-light border-dark backgroud-white mr-1" asp-area="" asp-controller="Projects" asp-action="Details" asp-route-id="@Model.IdProject">
                        <i class="bi bi-backspace"></i>
                    </a>
                    <a class="btn btn-light border-dark backgroud-white mr-1" asp-area="" asp-controller="Projects" asp-action="ListAssignment" asp-route-id="@Model.Id">
                        <i class="bi bi-arrow-left-square"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>      
</div>




