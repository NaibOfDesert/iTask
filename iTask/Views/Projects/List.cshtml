@model List<Project>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Projects";
}


@if (SignInManager.IsSignedIn(User)){
 // TODO: add defentdenscies of admin ale signed projects to users.
}

<h1 class="display-4" style="display: flex; justify-content: center;">
    Projects List
</h1>

<div class="card card-body border-dark mb-3">
    <table class="table text-dark">  
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Date</th>
                <th scope="col">Progress</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var m in Model){
                <tr> 
                    <td>#@m.Id</td>
                    <td>
                        <a class="text-dark" asp-area="" asp-controller="Projects" asp-action="Details" asp-route-id="@m.Id">
                            @m.Name
                        </a>
                    </td>
                    <td>@m.DateStart.ToString("dd/MM/yyyy")-@m.DateEnd.ToString("dd/MM/yyyy")</td>
                    <td>@m.Assignments.Count().ToString()</td>
                    <td align="right">                    
                        <a class="btn btn-dark border-dark btn-sm" asp-area="" asp-controller="Projects" asp-action="Details" asp-route-id="@m.Id">
                            <i class="bi bi-arrow-right-square"></i>
                        </a>
                        <a class="btn btn-light border-dark btn-sm backgroud-white" asp-area="" asp-controller="Projects" asp-action="Edit" asp-route-id="@m.Id">
                            <i class="bi bi-pen"></i>
                        </a>
                        <a class="btn btn-light border-dark btn-sm" asp-area="" asp-controller="Projects" asp-action="Remove" asp-route-id="@m.Id">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
<a class="btn btn-dark border-dark" asp-area="" asp-controller="Projects" asp-action="Add">
    <i class="bi bi-plus-square"></i> 
</a>

