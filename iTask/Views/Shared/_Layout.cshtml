<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iTask</title>  
    <link icon="itask.png" typ="image/x-icon" href="/img/itask.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/iTask.styles.css" asp-append-version="true" />
</head>
<body>
    


    <div class="sidefield">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/img/itask.png" alt="iTask" style="width:36px; height:36px"> 
            <partial name="_LoginPartial" />

        </a>


        <li class="nav-item">
                <a class="nav-link a" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>


            <li class="nav-item">
                <a class="nav-link a" asp-area="" asp-controller="Project" asp-action="Index">Projects</a>
        </li>
    </div>

    <div class="mainfield">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand a" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/itask.png" alt="iTask" style="width:36px; height:36px">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link a" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>
        </header>
        <a> cos</a>
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>


            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Project" asp-action="Index">Projects</a>
            </li>
        </ul>

        <main role="main" class="pb-3">
            @RenderBody()


            
        </main>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - iTask - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

