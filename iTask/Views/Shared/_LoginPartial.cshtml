@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <a class="" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> 
        <img src="~/img/itask.png" alt="iTask" style="width:35px; height:35px"> 
        @User.Identity?.Name
    </a>

    <form  class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button  type="submit" class="nav-link btn btn-link">Logout</button>
    </form>

}
else
{

    <a class="" asp-area="Identity" asp-page="/Account/Login"> 
        <img src="~/img/user.png" alt="iTask" style="width:35px; height:35px"> 
        Login
    </a>

}

